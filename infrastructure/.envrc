# Infrastructure environment configuration
# This inherits AWS_PROFILE from parent directory

export PYTHONDONTWRITEBYTECODE=1	

# Auto-activate CDK virtual environment
if [[ ! -d .venv ]]; then
    echo "ðŸ”¨ Creating CDK virtual environment..."
    python3 -m venv .venv
fi

echo "ðŸ”„ Activating CDK virtual environment..."
source .venv/bin/activate

# Ensure AWS_PROFILE is set (inherit from parent or set default)
if [[ -z "$AWS_PROFILE" ]]; then
    export AWS_PROFILE=cvdv
fi

echo "âœ… CDK environment activated (AWS Profile: $AWS_PROFILE)" 